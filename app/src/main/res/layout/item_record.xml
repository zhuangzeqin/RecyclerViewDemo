<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/tv_item_record_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信普通收款"
                android:textColor="@color/black_gray"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/tv_item_record_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_item_record_name"
                android:layout_marginTop="10dp"
                android:text="2016-7-14 11:55:13"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/small_text_size" />


            <TextView
                android:id="@+id/tv_item_record_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text="0.00元"
                android:textColor="@color/red"
                android:textSize="@dimen/middle_text_size" />

            <TextView
                android:id="@+id/tv_affirm_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tv_item_record_amount"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:text="aaaa"
                android:textColor="@color/gray_light"
                android:textSize="@dimen/small_text_size" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>
</LinearLayout>